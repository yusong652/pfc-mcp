{
  "name": "group",
  "category": "attribute",
  "category_name": "Attribute Elements",
  "syntax": "group <name> [slot <s>] [and <name>] [or <name>] [only] [matches <i>]",
  "alt_syntax": "group 'slot=name'",
  "description": "Select by group membership. Supports slot specification, logical combinations, and piece matching count for contacts.",
  "parameters": [
    {
      "name": "name",
      "type": "string",
      "description": "Group name"
    },
    {
      "name": "slot",
      "type": "string",
      "description": "Slot name (default slot if omitted)"
    },
    {
      "name": "and",
      "type": "string",
      "description": "Additional required group"
    },
    {
      "name": "or",
      "type": "string",
      "description": "Alternative group"
    },
    {
      "name": "only",
      "type": "flag",
      "description": "Must match specified groups exclusively"
    },
    {
      "name": "matches",
      "type": "integer",
      "description": "Number of contacting pieces that must belong to the group (1 or 2). Used in CMAT for contact model assignment.",
      "values": [1, 2],
      "default": 1
    }
  ],
  "examples": [
    "range group 'sample'",
    "range group 'layer1' slot 'geology'",
    "range group 'top' and 'active'",
    "range group 'soft' or 'damaged'",
    "range group 'glass' matches 2",
    "range group 'steel' matches 1"
  ],
  "notes": [
    "matches 1: At least one of the two contacting pieces belongs to the group",
    "matches 2: Both contacting pieces must belong to the group (e.g., glass-glass contact)"
  ],
  "search_keywords": [
    "group",
    "slot",
    "membership",
    "matches"
  ]
}
